{{#each articles}}
    <div class="col s12 m7">
        <div class="card horizontal">
            <div class="card-image">
                <img src="https://lorempixel.com/100/190/nature/6">
            </div>
            <div class="card-stacked">
                <div class="card-content">
                    <h5>{{title}}</h5>
                    <p>{{summary}}</p>
                    <p>{{readTime}}</p>
                </div>
                <div class="card-action">
                    <p>read full article<a href="{{link}}">Here</a></p>
                </div>
            </div>
        </div>
    </div>


    <div class="col s12 m7">
        <div class="card horizontal">
            <div class="card-image full-image">
                <img src="https://lorempixel.com/100/190/nature/6">
            </div>
            <div class="card-stacked">
                <div class="card-content">
                    <h5>{{title}}</h5>
                    <p>{{summary}}</p>
                    <p>{{readTime}}</p>
                </div>
                <div class="card-action">
                    <a href="#">This is a link</a>
                    <!--Collapsible-->
                    <ul class="collapsible" data-collapsible="accordion">
                        <!--Comment-->
                        <li>
                            <div class="collapsible-header"><i class="material-icons">edit</i>Comment</div>
                            <div class="collapsible-body"><span>
                                 <form id="form-add-{{_id}}" action="add/comment/{{_id}}" method="post" style="background-color: white;">

          <!-- Author Name Input -->
          <div class="row">
            <div class="input-field col s2"></div>
            <div class="input-field col s8">
              <input id="author_name" name="name" type="text" class="validate">
              <label for="author_name">Your Name:</label>
            </div>
          </div>

                                     <!-- Comment Input -->
          <div class="row">
            <div class="input-field col s2"></div>
            <div class="input-field col s8">
              <textarea id="comment_box" name="comment" class="materialize-textarea"></textarea>
              <label for="comment_box">Your Comment:</label>
            </div>
          </div>

                                     <!-- Submit Button -->
            <div class="row">
              <div class="input-field col s2"></div>
              <div class="input-field col s8">
              <center><input class="btn add-comment-button blue-grey darken-4" data-id="{{_id}}" type="submit" value="Submit"></center>
              </div>
            </div>

        </form>
                            </span></div>
                        </li>

                        <!--Read Comments-->
                        <li>
                            <div class="collapsible-header"><i class="material-icons">short_text</i>Read Comments</div>
                            <div class="collapsible-body"><span>
                                 {{!-- Check if the article has comments --}}
                                {{#if comments}}

                                {{!-- Article has comments so iterate over them  --}}
                                    <ul class="collection">
                                        {{#each comments}}

                                            <li class="collection-item">

                {{!-- Add Author Name --}}
                                                <b>{{author}}</b>

                                                {{!-- Add a Delete Button --}}
                                                <span class="badge">
                  <form id="form-delete-{{_id}}" action="remove/comment/{{_id}}" method="post">
                    <input class="btn-small delete-comment-button" data-id="{{_id}}" type="submit" value="Delete" style="color: white; background-color: red; border-color: red;">
                  </form>
                </span>

                <br>

                                                {{!-- Add the Content of the Comment --}}
                                                {{content}}

              </li>
                                        {{/each}}
                                    </ul>

                                {{!-- No comments, so display message --}}
                                {{else}}
                                    <p>No Comments Yet :( </p>
                                {{/if}}

                            </span></div>
                        </li>
                    </ul>
                    <!--<button class="btn waves-effect waves-light blue-grey darken-4 right">Comment</button>-->
                    <!--<button class="btn waves-effect waves-light blue-grey darken-4 right">Read Comments</button>-->
                </div>
            </div>
        </div>
    </div>



{{/each}}